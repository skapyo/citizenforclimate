        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
          <a class="dropdown-item" href="/profil/mesEtapes"><%=translation.NAV_PROFIL_PREFERENCE%></a>
          <a class="dropdown-item" href="/profil/referent"><%=translation.NAV_PROFIL_REFERENT%></a>
          <a class="dropdown-item" href="/authentification/logout"><%=translation.NAV_PROFIL_DISCONNECT%></a>
        </div>
      </li>
    </ul>
      <% } else { %>
     </ul>

     <ul class="nav navbar-nav navbar-right" >
        <li class="nav-item " id="Profil_Icone">
          <a href="/profil/mesEtapes"><span class="glyphicon glyphicon-user"></span>Connexion</a>
        </li>
   </ul>
         
      <% } %>
        
      
  </nav>
