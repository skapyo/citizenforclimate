<!DOCTYPE html>
<html>
<head>
 <% include ../partials/header.ejs %>
<title><%=translation.LOGIN_TITLE%></title>
<!--Custom Theme files-->
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="keywords" content="Register Login Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login Signup Responsive web template, SmartPhone Compatible web template, free WebDesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
<!-- Custom Theme files -->
<link href="/stylesheets/login.css" rel="stylesheet" type="text/css" media="all" />
<!--web-fonts-->
<link href='//fonts.googleapis.com/css?family=Jura:400,300,500,600' rel='stylesheet' type='text/css'>
<!--//web-fonts-->
</head>
<body>
	<% include ../partials/nav.ejs %>
	<!-- main -->
	<div class="main">
		<!--Messages-->
			<%  if (typeof successes != 'undefined'){ %>
				<%   successes.forEach(function(success) { %> %>
			    <div class='header alert alert-info alert-dismissible'>
			        <strong><i class="fa fa-exclamation-circle"></i><%=translation.LOGIN_MSG_INFO%></strong><%= success %>
			    </div>

			 <% });
			 } %>
			 <%  if (typeof erreurs != 'undefined'){ %>
				<%   erreurs.forEach(function(erreur) { %> %>
			    <div class='header alert alert-danger alert-dismissible'>
			        <strong><i class="fa fa-exclamation-circle"></i><%=translation.LOGIN_MSG_INFO%></strong><%= erreur %>
			    </div>
			    
			 <% });
			 } %>
			
		
		<!--login-profile-->
		<!--signin-form-->
		<div class="w3">
			<div class="titre">
				<h3><%=translation.LOGIN_AUTHENTIFICATION_TITLE%></h3>
			</div>
			<div class="signin-form profile">
				<div class="login-form form-group">
					<form action="/authentification/authentification" method="post">
						<input type="email" class="form-control"  name="username" placeholder="E-mail" required="" >
						<input type="password"  class="form-control" name="password" placeholder="Mot de passe" required="">
						<div class="tp">
							<input type="submit" class="btn btn-default couleurbg largeurAuto" value="<%=translation.LOGIN_AUTHENTIFICATION_TITLE%>">
						</div>
						<div class="tp">

							<button type="button" class="btn btn-default couleurbg motDePasse" data-toggle="modal" data-target="#popinMotDePasseOublie"><%=translation.LOGIN_AUTHENTIFICATION_FORGOT_PASSWORD%></button>
            
							<a href="/authentification/modeDePasseOublie">
								
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="agile">
			<div class="titre">
				<h3><%=translation.LOGIN_REGISTER_FORM_TITLE%></h3>
			</div>
			
			<div class="signin-form profile">
				<div class="login-form">
					<form action="/authentification/enregistrement" method="post">
						<input type="email" class="form-control"  name="username" placeholder="<%=translation.LOGIN_REGISTER_FORM_TITLE%>" required=""  >
						<input type="text" class="form-control" name="nom" placeholder="<%=translation.LOGIN_REGISTER_FORM_NAME%>" required="">
						<input type="text" class="form-control"  name="prenom" placeholder="<%=translation.LOGIN_REGISTER_FORM_FIRSTNAME%>" required="">
						<input type="tel" class="form-control"  name="telephone" placeholder="<%=translation.LOGIN_REGISTER_FORM_PHONE%>">
						<input type="password" class="form-control"  name="password" placeholder="<%=translation.LOGIN_REGISTER_FORM_PASSWORD%>" required="">
						<input type="password" name="confimPassword" class="form-control"  placeholder="<%=translation.LOGIN_REGISTER_FORM_CONFIRM_PASSWORD%>" required="">
						<input type="submit" class="btn btn-default couleurbg largeurAuto" value="<%=translation.LOGIN_REGISTER_FORM_SAVE%>">
					</form>
				</div>
			</div>
		</div>
		<div class="clear"></div>
		<!--//signin-form-->	
	</div>				
</body>
</html>


<!-- popin -->
<div class="modal fade" id="popinMotDePasseOublie" tabindex="-1" role="dialog" aria-labelledby="popinLabel" aria-hidden="true">
  <form method="post" action="/authentification/envoyerEmailReinitialisationMotDePasse" id="popinMotDePasseOublieForm">

      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="popinLabel"><%=translation.LOGIN_FORGOT_PASSWORD_POPUP_TITLE%></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
			  <%=translation.LOGIN_FORGOT_PASSWORD_POPUP_BODY%>
			<input type="email" form ="popinMotDePasseOublieForm" required="" name="emailRecuperation" id="emailRecuperation" />
          
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><%=translation.LOGIN_FORGOT_PASSWORD_POPUP_CANCEL%></button>
            <button type="submit" class="btn btn-default couleurbg" id="ok"><%=translation.LOGIN_FORGOT_PASSWORD_POPUP_OK%></button>
          </div>
        </div>
      </div>
  </form>	
</div>
<%  if(typeof reintialisation  !== "undefined" && reintialisation!== undefined  && reintialisation == 'true'){ %>

<!-- popin -->
<div class="modal fade" id="reintialisationMDP" tabindex="-1" role="dialog" aria-labelledby="popinLabel" aria-hidden="true">
  <form method="post" action="/authentification/reinitialisationMotDePasse" id="popinReintialisationMDPForm">
  	<%  if(typeof token  !== "undefined" && token!== undefined ){ %>
	
  	   <input type="text" style="display:none" id ="token" name="token" value="<%= token %>" />
  	<% } %>
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="popinLabel"><%=translation.LOGIN_VALIDATION_PASSWORD_POPUP_TITLE%></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
			  <%=translation.LOGIN_VALIDATION_PASSWORD_POPUP_BODY%>
			<input type="password" form ="popinReintialisationMDPForm" id="motDePasse" class="form-control"  name="motDePasse" placeholder="<%=translation.LOGIN_VALIDATION_PASSWORD_POPUP_FORM_PWD%>" required="">
			<input type="password" form ="popinReintialisationMDPForm" id="motDePasseConf" name="motDePasseConf" class="form-control"  placeholder="<%=translation.LOGIN_VALIDATION_PASSWORD_POPUP_FORM_CONFIRM%>" required="">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><%=translation.LOGIN_VALIDATION_PASSWORD_POPUP_FORM_CONFIRM%></button>
            <button type="submit" class="btn btn-default couleurbg" id="validerNouveauMotDePasse"><%=translation.LOGIN_VALIDATION_PASSWORD_POPUP_FORM_VALIDATE%></button>
          </div>
        </div>
      </div>
  </form>	
</div>
<script>
	$('#reintialisationMDP').modal('show'); 
</script>
	<% } %>

<script>
	$(".navbar-nav li").removeClass("active");
	$("#Profil_Icone").addClass("active"); 
</script>